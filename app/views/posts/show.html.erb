<% content_for :sidebar do %>
    <ul id="sidebar_post_list">
        <%= render "post_list" %>
    </ul>
<% end %>

<div id="post_container">
    <h2 id="post_title">
        <%= @post.title %>
    </h2>
    
    <h3 id="post_author">
        <% if user_signed_in? %>
            <%= @post.user.name %>
        <% else %>
            Post author is only visible to logged in users!
        <% end %>
    </h3>
    
    <p id="post_body">
        <%= @post.body %>
    </p>
    
    <% if @post.user == @user %>
        <%= link_to image_tag("edit.svg"), edit_post_path, id: "edit_link" %>
        <%= link_to image_tag("delete.svg"), post_path, data: {turbo_method: :delete,  turbo_confirm: "Are you sure you want to delete this post?"}, id: "delete_link" %>
    <% end %>
</div>
